<% include ../partials/head %>
        <body>
            <main class="container">
                <section class="login">
                    <div class="block">
                        <div>
                            <h3 class="heading">Inloggen</h3>
                        </div>
                        <form action="/login" method="POST">
                            <div class="field">
                                <p class="control">
                                    <input name="user_name" class="input" type="text" placeholder="Gebruikersnaam">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <input name="password" class="input" type="password" placeholder="Wachtwoord">
                                </p>
                            </div>
                            <div class="field is-grouped is-grouped-left">
                                <p class="control">
                                    <button class="button is-success">
                                        Login
                                    </button>
                                </p>
                                <p class="control">
                                    <a class="button is-info" href="/register">
                                        Registreren
                                    </a>
                                </p>
                            </div>
                        </form>

                    </div>
                </section>
            </main>
        </body>

