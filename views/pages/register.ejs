<% include ../partials/head %>

        <body>
            <main class="container">
                <section class="register">
                    <div class="block">
                        <div>
                            <h3 class="heading">Registreren</h3>
                        </div>
                        <form action="/register" method="POST">
                            <div class="field">
                                <p class="control">
                                    <input name="first_name" class="input" type="text" placeholder="Voornaam">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <input name="last_name" class="input" type="text" placeholder="Achternaam">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <input name="user_name" class="input" type="text" placeholder="Gebruikersnaam">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <input name="password" class="input" type="password" placeholder="Wachtwoord">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <input name="password2" class="input" type="password" placeholder="Wachtwoord nogmaals">
                                </p>
                            </div>
                            <div class="field is-grouped is-grouped-left">
                                <p class="control">
                                    <button class="button is-success" type="submit">
                                        Registreren
                                    </button>
                                </p>
                                <p class="control">
                                    <a class="button is-light" href="/login">
                                        Naar login
                                    </a>
                                </p>

                            </div>
                        </form>

                    </div>
                </section>
            </main>
        </body>

<% include ../components/footer %>